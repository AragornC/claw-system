# 本地看板 + OpenClaw 运行参数（不含 API 密钥）
OPENCLAW_AGENT_LOCAL=1
OPENCLAW_AGENT_ID=main

# 与 openclaw agent --channel 保持一致（留空则不固定）：
# telegram|whatsapp|discord|googlechat|slack|signal|imessage|feishu|nostr|msteams|mattermost|nextcloud-talk|matrix|bluebubbles|line|zalo|zalouser|tlon
OPENCLAW_CHANNEL=

# 与 openclaw agent --to 保持一致（留空则由 OpenClaw 自行路由）
OPENCLAW_TO=

# 指定会话ID（留空则按 channel/to 自动生成）
OPENCLAW_SESSION_ID=

# 1=把 AI 回复投递到频道（openclaw agent --deliver）；0=仅返回给看板前端
OPENCLAW_DELIVER=0

# deliver=1 时可选的投递覆盖参数
OPENCLAW_REPLY_CHANNEL=
OPENCLAW_REPLY_TO=
OPENCLAW_REPLY_ACCOUNT=

# 与 openclaw agent 参数一致
OPENCLAW_THINKING=medium
OPENCLAW_VERBOSE=off
OPENCLAW_TIMEOUT_SEC=90
OPENCLAW_CHAT_TIMEOUT_MS=95000

# Telegram 单向同步（Telegram -> ThunderClaw 聊天面板）：
# 配置 Bot Token 后，Telegram 发来的消息会进入看板聊天，并由本地 AI 自动回复到 Telegram。
# 本地看板发起的消息不会反向同步到 Telegram。
THUNDERCLAW_TELEGRAM_BOT_TOKEN=
# 可选：只允许这些 chat id（英文逗号分隔），留空=允许所有会话
THUNDERCLAW_TELEGRAM_ALLOWED_CHAT_IDS=
# 可选：1=自动回复 Telegram；0=只把 Telegram 消息同步到看板，不自动回 Telegram
THUNDERCLAW_TELEGRAM_AUTO_REPLY=1
# 可选：1=把交易事件（开仓/平仓/风控）主动推送到 Telegram；0=关闭主动推送
THUNDERCLAW_TELEGRAM_PUSH_TRADES=1
# 可选：主动推送目标 chat id（逗号分隔）；留空=自动使用允许列表/最近会话
THUNDERCLAW_TELEGRAM_PUSH_CHAT_IDS=
# 可选：推送事件类型（逗号分隔）：open,close,risk
THUNDERCLAW_TELEGRAM_PUSH_EVENTS=open,close,risk
# 可选：推送扫描间隔毫秒
THUNDERCLAW_TELEGRAM_PUSH_INTERVAL_MS=4000

PORT=8765
