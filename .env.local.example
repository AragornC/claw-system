# ThunderClaw 最小配置（推荐）
# 模型连接走引导命令：npm run openclaw:setup:local
OPENCLAW_AGENT_LOCAL=1
OPENCLAW_AGENT_ID=main

# Telegram：只需要填 bot token 即可
# 也可以启动后在聊天框里发送“设置 Telegram token ...”来更新
THUNDERCLAW_TELEGRAM_BOT_TOKEN=

# 默认行为：来信自动回复 + 交易事件主动推送
THUNDERCLAW_TELEGRAM_AUTO_REPLY=1
THUNDERCLAW_TELEGRAM_PUSH_TRADES=1
THUNDERCLAW_TELEGRAM_PUSH_EVENTS=open,close,risk
THUNDERCLAW_TELEGRAM_PUSH_INTERVAL_MS=4000

PORT=8765

# ---- 高级可选（大多数用户不用） ----
# THUNDERCLAW_TELEGRAM_ALLOWED_CHAT_IDS=123456789
# THUNDERCLAW_TELEGRAM_PUSH_CHAT_IDS=123456789
# THUNDERCLAW_TELEGRAM_POLL_LOCK_STALE_MS=180000
# THUNDERCLAW_MEMORY_RETRIEVE_TOPK=8
# THUNDERCLAW_MEMORY_MAX_ITEMS=4000
# OPENCLAW_THINKING=medium
# OPENCLAW_VERBOSE=off
